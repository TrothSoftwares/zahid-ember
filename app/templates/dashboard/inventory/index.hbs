<h2 class="ui dividing header">Products</h2>



 {{link-to  "New Product" 'dashboard.inventory.new' }}




<div class="ui top attached tabular menu">
  <a class="item {{allActiveClass}}" {{action "changeActiveClass" 'active'}} data-tab="{{producttype.typename}}">All</a>
  {{#each producttypes as |producttype|}}
  <a class="item {{producttype.activeclass}}" {{action "changeActiveClass" producttype}} data-tab="{{producttype.typename}}">{{producttype.typename}}</a>
  {{/each}}
</div>




<div class="ui bottom attached tab segment {{allActiveClass}} ">
  {{models-table
    data=computedProducts
    columns=columns
    customMessages=customMessages
     
  }}
</div>

{{#each producttypes as |producttype|}}
<div class="ui bottom attached tab segment {{producttype.activeclass}} " data-tab="{{producttype.typename}}">
  {{models-table
    data=computedProducts
    columns=columns
    customMessages=customMessages
  }}
</div>
{{/each}}

{{outlet}}

<script>
$('.menu .item')
  .tab()
;
</script>
{{outlet}}
